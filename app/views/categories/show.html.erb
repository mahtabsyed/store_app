<% provide(:title, @category.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @category.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @category.products.any? %>
      <h3>Products (<%= @category.products.count %>)</h3>
      <ol class="products">
        <%= render @products %>
      </ol>
      <%= will_paginate @products %>
    <% end %>
  </div>
</div>
